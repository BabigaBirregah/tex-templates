\ProvidesPackage{beamercolorthemeIRTES}
   [2013/07/13 v4.0 Beamer 'IRTES' Color Theme]

\mode<presentation>

\RequirePackage{xcolor}

\newcommand{\setbeamercolorXXX}[2]{%
	\setbeamercolor{#1}{#2}%
	\usebeamercolor{#1}%
	\definecolor{#1.fg}{named}{fg}%
	\definecolor{#1.bg}{named}{bg}%
}

\definecolor{IRTESblue}{rgb}{0.1647,0.3451,0.4745} % #2a5879
\definecolor{IRTESmagenta}{rgb}{0.6353,0.051,0.349} % #a20d59
\definecolor{IRTESlightblue}{rgb}{0,0.4824,0.749} % #7bbeff
\definecolor{IRTESlightmagenta}{rgb}{0.9529,0.3882,0.6824} % #f363ae
\definecolor{IRTESlightestblue}{rgb}{0.9294,0.9647,1} % #edf6ff
\definecolor{IRTESlightestmagenta}{rgb}{0.9882,0.8627,0.9294} % #fcdced
\definecolor{IRTESdarkgray}{rgb}{0.30,0.30,0.36} % #4d4d5c

\setbeamercolor{normal text}{fg=black}
\setbeamercolor{alerted text}{fg=IRTESmagenta}
\setbeamercolor{example text}{fg=IRTESlightblue}
\setbeamercolor{verse}{fg=IRTESlightblue}
\setbeamercolor{quotation}{fg=IRTESlightblue}
\setbeamercolor{quote}{fg=IRTESlightblue}
\setbeamercolor{semiverbatim}{fg=IRTESdarkgray}
\setbeamercolor{structure}{fg=IRTESlightblue}
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{author in head/foot}{fg=IRTESblue}
\setbeamercolor{title in head/foot}{fg=IRTESblue}
\setbeamercolor{date in head/foot}{fg=IRTESblue}
\setbeamercolor{author}{fg=IRTESblue}
\setbeamercolor{institute}{fg=IRTESdarkgray}
\setbeamercolor{date}{fg=IRTESmagenta}
\setbeamercolor{frametitle}{fg=white}
\setbeamercolor{framesubtitle}{fg=white}
\setbeamercolor{footnote}{fg=IRTESdarkgray}
\setbeamercolor{button}{bg=IRTESblue,fg=white}
\setbeamercolor{block title}{fg=white,bg=IRTESlightblue}
\setbeamercolor{block body}{fg=black,bg=IRTESlightestblue}
\setbeamercolor{block title alerted}{fg=white,bg=IRTESlightmagenta}
\setbeamercolor{block body alerted}{fg=IRTESmagenta,bg=IRTESlightestmagenta}
\setbeamercolor{block body remark}{fg=IRTESblue,bg=IRTESlightestblue}

\setbeamercolorXXX{circle progress bar}{bg=IRTESlightblue,fg=white}
\setbeamercolorXXX{circle progress bar/first bar}{bg=IRTESmagenta}
\setbeamercolorXXX{circle progress bar/second bar}{bg=IRTESblue}
\setbeamercolorXXX{circle progress bar/third bar}{bg=IRTESdarkgray}

\mode<all>

