\ProvidesPackage{beamerinnerthemeSETLAB}
   [2010/12/10 v1.0 Beamer Inner 'SeT Lab' Theme]

\DeclareOptionBeamer{language}{\gdef\beamer@innertheme@setlab@lang{#1}}
%\ExecuteOptionsBeamer{left}
\ProcessOptionsBeamer

\mode<presentation>

\useinnertheme{rectangles}

\usepackage{listings}

\lstloadlanguages{\beamer@innertheme@setlab@lang}
\expandafter\lstset{
	float=hbp,%
	basicstyle=\ttfamily\scriptsize, %
	identifierstyle=\color{listingIdentifier}, %
	keywordstyle=\color{listingKeys}, %
	stringstyle=\color{listingString}, %
	commentstyle=\color{listingComments}, %
	columns=flexible, %
	tabsize=4, %
	frame=none, %
	extendedchars=true, %
	showspaces=false, %
	showstringspaces=false, %
	%numbers=left, %
	%numberstyle=\tiny, %
	breaklines=true, %
	%backgroundcolor=, %
	breakautoindent=true, %
	captionpos=b,%
	texcl=true,%
	language=Java,
	escapeinside={(*@}{@*)},%
	morecomment=[s][\color{listingComments}]{/*}{*/}
}

\mode
<all>
